@use "../base/base"
@use "../layout/layout"
@mixin hover($color:#000, $bcolor: #fff,)
  background: $bcolor
  color: $color
  transition: .4s
  border: 2px solid $bcolor


.btn-white
  background: none
  padding: .2rem .4rem
  border: 2px solid #fff
  color: whitesmoke
  font-weight: 600
  font-size: 1.3rem
  border-radius: 2rem
  font-family: "Poppins", sans-serif

.btn-white:hover
  @include hover(#000,base.$success)
  @include layout.shadow
   

